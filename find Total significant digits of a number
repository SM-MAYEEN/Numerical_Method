
Q;find Total significant digits of a number


//     Bismillahir Rahmanir Raheem ( 'بِسْمِ ٱللَّٰهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ)
//     In the name of allah (SWT) the Merciful, the Compasionate
//     author: mayeenuddinhasan

#include <bits/stdc++.h>
using namespace std;

int fun(double n)
{
    stringstream s;
    s << n;
    string str = s.str();
    int cnt = 0;
    bool f = false;

    for (int i = 0; i < str.length(); i++)
    {
        if (isdigit(str[i]))
        {
            if (str[i] != '0' || f)
            {
                cnt++;
            }
        }
        else if (str[i] == '.')
        {
            f = true;
        }
    }

    return cnt;
}

int main()
{
    double n;
    cout << "Enter nber: ";
    cin >> n;
    int sign = fun(n);
    cout << "Total sig_digits: " << sign << endl;

    return 0;
}
 
Q;Round the number choose the point.

#include <bits/stdc++.h>
using namespace std;

double fun(double n, int place)
{
    double x =  pow(10, place);
    double mid = n * x;
    double y =  round(mid);
    if ( fabs(mid - y) == 0.5)
    {
        if (static_cast<int>(y) % 2 != 0)
        {
            y = y - 1; 
        }
    }
    return y / x;
}

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        double n;
        int place;
        cout << "Enter a number: ";
         cin >> n;
         cout << "Enter the point round to: ";
         cin >> place;
         double res = fun(n, place);
          cout << "y value: " <<  fixed <<  setprecision(place) << res <<  endl;
    }
    return 0;
}
